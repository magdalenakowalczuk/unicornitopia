<p id="notice"><%= notice %></p>

<h1>Unicorns of the world</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Source</th>
      <th>Magical</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unicorns.each do |unicorn| %>
      <tr>
        <td><%= unicorn.name %></td>
        <td><%= unicorn.year %></td>
        <td><%= unicorn.source %></td>
        <td><%= unicorn.magical %></td>
        <td><%= image_tag unicorn.picture_url, width: 100 if unicorn.picture.present? %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Show', unicorn %></td>
          <td><%= link_to 'Edit', edit_unicorn_path(unicorn) %></td>
          <td><%= link_to 'Destroy', unicorn, method: :delete, data: { confirm: 'Whyyyyyyy, do you want to delete me. Are you sure????' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Unicorn', new_unicorn_path %>
<% end %>
